{
  "name": "Flexbones",
  "version": "0.1.0",
  "description": "Build everything using NPM",
  "author": "Rory Ashford <rory@roikles.com>",
  "scripts": {
    "compile-sass": "node-sass --output-style expanded assets/sass/style.scss style.css && postcss --use autoprefixer -o style.css style.css",
    "browserify-js": "browserify assets/js/scripts.js -o scripts.min.js",
    "uglify-js": "uglify scripts.min.js -o scripts.min.js",
    "optimise-images": "imageoptim -d assets/imgs",
    "svg-to-png": "svg2png assets/imgs",
    "build-images": "npm run svg-to-png -s && npm run optimise-images -s",
    "watch-sass": "fsmonitor -d 'assets/sass' -s '+*.scss' npm run compile-sass -s",
    "watch-js": "fsmonitor -d 'assets/js' -s '+*.js' npm run browserify-js -s",
    "watch": "livereload . -i 3000 & npm run watch-sass -s & npm run watch-js -s"
  },
  "devDependencies": {
    "browserify": "^8.1.3",
    "chalk-cli": "^1.0.1",
    "fsmonitor": "^0.2.4",
    "imageoptim-cli": "^1.11.4",
    "livereload": "^0.3.6",
    "node-sass": "^2.0.1",
    "pixrem-cli": "^1.0.3",
    "postcss-cli": "^1.4.0",
    "sass": "^0.5.0",
    "svg2png": "^1.1.0",
    "svg2png-cli": "^1.1.1",
    "uglify-js": "^2.4.15"
  }
}
